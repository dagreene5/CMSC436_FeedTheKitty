<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:id="@+id/event_layout_title"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/event_layout_hashtag"
            android:layout_below="@+id/event_layout_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="Event description:\n"
            android:id="@+id/textView"
            android:layout_below="@+id/event_layout_hashtag"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_layout_decription"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="10dp" android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event location: "
            android:id="@+id/textView2"
            android:layout_below="@+id/event_layout_decription" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/event_layout_location"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="10dp" android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:text="Event start time: "
            android:layout_below="@+id/event_layout_location"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:id="@+id/event_layout_start_time"
            android:layout_marginLeft="10dp" android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_below="@+id/event_layout_start_time"
            android:text="Event end time: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:id="@+id/event_layout_end_time"
            android:layout_marginLeft="10dp" android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_layout_end_time"
            android:id="@+id/textView5"
            android:text="Goal amount: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:id="@+id/event_layout_amount_needed"
            android:layout_marginLeft="10dp" android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_layout_amount_needed"
            android:id="@+id/textView6"
            android:text="Collected funds: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:id="@+id/event_layout_funds"
            android:layout_marginLeft="10dp" android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_layout_funds"
            android:id="@+id/textView7"
            android:text="Default contribution: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:id="@+id/event_layout_default_contribution"
            android:layout_marginLeft="10dp" android:layout_marginBottom="5dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/donation"
            android:text="@string/donate"
            android:layout_below="@+id/event_layout_default_contribution"
            android:layout_centerInParent="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/attendEvent"
            android:text="Attend Event"
            android:layout_below="@+id/donation"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/textView7" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:text="People attending:"
            android:layout_below="@+id/attendEvent"/>

        <ListView
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:id="@android:id/list"
            android:layout_below="@+id/textView8"
            android:layout_height="wrap_content">
        </ListView>


    </RelativeLayout>
</ScrollView>